{
  "$schema": "https://cursor.sh/schemas/rules-v1.json",
  "rules": {
    "context": {
      "projectDocuments": {
        "include": [
          "README.md",
          "frontend/README.md",
          "backend/README.md"
        ],
        "updateStrategy": "auto",
        "referenceMode": "semantic"
      }
    },
    "documentation": {
      "readme": {
        "autoUpdate": {
          "triggers": [
            "new-feature",
            "api-change",
            "config-update"
          ],
          "sections": {
            "features": {
              "location": "## Funcionalidades\n",
              "template": "- [{timestamp}] {featureName}: {description}"
            },
            "setup": {
              "autoSync": true,
              "dependencies": {
                "checkFiles": [
                  "package.json",
                  "requirements.txt"
                ]
              }
            }
          }
        }
      }
    },
    "ai": {
      "contextUsage": {
        "readmeWeight": 0.9,
        "mandatoryReference": true
      },
      "promptTemplates": {
        "default": "Considere a estrutura do projeto descrita nos READMEs: {readmeContext}. Responda mantendo consistÃªncia com a arquitetura documentada."
      }
    },
    "hooks": {
      "postCodeGeneration": [
        {
          "name": "update-readme",
          "command": "node scripts/update-readme.js {filePath}"
        }
      ]
    }
  }

}