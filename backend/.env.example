# API Settings
PROJECT_NAME=TransROM-IA
VERSION=0.1.0
API_V1_STR=/api/v1

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Security Settings
# Required - Generate a secure secret key
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days

# CORS Settings
# Comma-separated list of allowed origins
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Database Settings (Required)
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-password-here
POSTGRES_DB=transrom
POSTGRES_PORT=5432

# Optional: Override full database URI (if not set, will be constructed from above params)
# SQLALCHEMY_DATABASE_URI=postgresql+asyncpg://user:password@localhost:5432/dbname

# Email Settings (Optional)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password
EMAILS_FROM_EMAIL=your-email@example.com
EMAILS_FROM_NAME=TransROM-IA System
EMAIL_RESET_TOKEN_EXPIRE_HOURS=48
EMAIL_TEMPLATES_DIR=app/email-templates
EMAILS_ENABLED=False

# OAuth Settings (Required for Google Authentication)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback

# Application Settings
ENVIRONMENT=development
UPLOAD_DIR=uploads